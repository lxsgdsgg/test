<template>
  <div class="page-content">
    <div class="page-content-hd">
    </div>
    <div class="page-content-bd">
      <el-table
        :data="tableData"
        border
        tooltip-effect="light"
        align="center"
        style="width: 100%"
      >

        <el-table-column
          width="55"
          :fixed="false"
        >
        </el-table-column>

        <el-table-column
          prop="communityName"
          align="left"
          label="房源编号">
        </el-table-column>

        <el-table-column
          prop="communityName"
          align="left"
          label="小区名称">
        </el-table-column>

        <el-table-column
          prop="buildingsName"
          align="left"
          label="座栋">
        </el-table-column>


        <el-table-column
          prop="buildingHouseName"
          align="left"
          label="门牌号">
        </el-table-column>


        <el-table-column
          prop="buildSpace"
          align="left"
          label="面积">
        </el-table-column>


        <el-table-column
          prop="sellingPrice"
          align="left"
          label="售价">
        </el-table-column>

        <el-table-column
          prop="rentPrice"
          align="left"
          label="租价">
        </el-table-column>

      </el-table>
      <div style="margin-top: 15%">
          <el-form label-width="72px">
            <el-form-item label="客户评价:" prop="desc">
              <el-input type="textarea" v-model="form.visterEvaluate"></el-input>
            </el-form-item>
          </el-form>
      </div>
      <div style="margin-top: 20px;margin-left: 45%">
          <el-button @click="handleSubmit">提交</el-button>
          <el-button @click="handleCancel">取消</el-button>
      </div>
      <!--分页控件-->
      <b-pagination
        :listQuery="listQuery"
        @handleSizeChange="handleSizeChange"
        @handleCurrentChange="handleCurrentChange">
      </b-pagination>
    </div>
    <template>
    <!--二手房信息窗体-->
    <el-dialog
    title="二手房房源"
    :visible.sync="secondHouseDlg"
    width="50%"
    :close-on-click-modal="false"
    append-to-body
    >
         <second-house-data :data="currentRowData" v-if="hackReset"  @handleClick="closeWindows"></second-house-data>
    </el-dialog>
    </template>
  </div>   
</template>
<style></style>
<script>
  import {querySecondHouseInfoByShhId,saveOrUpdateTakeLookRecord} from "@/request/customer/takeLookRecord";
  import PageList from '@/mixins/pageList'
  import SecondHouseData from './secondHouseData'
    export default {
      components:{PageList,SecondHouseData},
      mixins: [PageList],
      props:{
          data:{
            type:Object
          }
      },
        data() {
            return {
                form: {
                  id:'',
                  visterEvaluate:'',
                },
              tableData:[],
              secondHouseDlg:false,
              currentRowData:'',
              hackReset:false,
              listQuery:{
                limit:10,
                page:1,
                total:0
              },
            }
        },
        methods: {
          //查询数据
          querySecondHouseInfoByShhId(btn){
              let params = Object.assign({},this.form,{
                limit:this.listQuery.limit,
                page:this.listQuery.page
              })
              params.shhId = this.data.sourceId
              querySecondHouseInfoByShhId(params).then(res =>{
                  this.tableData = res.data
                  this.listQuery.total = res.count
              })
          },
          _loadData(btn){
            this.querySecondHouseInfoByShhId(btn)
          },
          addSecondHouse(){
              this.hackReset =false
              this.$nextTick(() =>{
                  this.hackReset =true
                  this.secondHouseDlg = true
              })
          },
          closeWindows(value){
            this.secondHouseDlg = false
            let arr = this.tableData
            let pushFlag = true
            //判断数据是否存在
            for (let i = 0; i< arr.length; i++) {
              if(arr[i].id === value.id){
                pushFlag = false
              }
            }
            if (pushFlag) {
              this.tableData.push(value)
            }else{
              this.$message({type:'warning',message:'该房源已存在'})
              return
            }
          },
          handleSubmit(){
            // let arr = this.tableData
            // let dataArr = []
            // for(let i = 0 ;i<arr.length;i++){
            //     dataArr[i] = arr[i].id
            // }
            this.$confirm('确定要删除带看记录吗？',{
              confirmBtnText:'确定',
              cancelBtnText:'取消',
              type:'warning'
            }).then(() =>{
                  let params = {...this.form}
                  params.id = this.data.id
                  saveOrUpdateTakeLookRecord({jsonData:JSON.stringify(params)}).then(res =>{
                    if(res.success){
                      this.$message({
                        type:'success',
                        message:res.msg
                      })
                      this.$emit('handleClick',1)
                    }else{
                      this.$message({
                        type:'warning',
                        message:res.msg
                      })
                    }
                  })
            }).catch(()=>{
              this.$message({
                type:'info',
                message:'已取消'
              })
            })
          },
          handleCancel(){
            this.$emit('handleClick',2)
          },
          setForm(data){
              for(let i in this.form){
                this.form[i] = data[i]
              }
            if(data['id'])this.form['id'] =  Number(this.form['id'])
          }
        },
        mounted() {
          this.setForm(this.data)
        }

    }

</script>
