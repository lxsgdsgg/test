<script>
  import BaseSelect from '@/components/BaseSelect'
  import BaseSectionSelect from '@/components/BaseSectionSelect'
  import * as consts from './consts'
  import {getBaseInfoSelectOpts} from '@/request/house/houseUsed'


  // 楼层 区间数据
