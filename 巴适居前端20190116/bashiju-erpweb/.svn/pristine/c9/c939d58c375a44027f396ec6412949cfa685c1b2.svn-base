      '8',
      '9',
      '不限'
    ]
  }

  // 房龄 区间数据
  const buildDateRegionValue = {
    min: [
      '0',
      '2005',
      '2006',
      '2007',
      '2008',
      '2010',
      '2012',
      '2014',
      '2015',
      '2017',
    ],
    max: [
      '2010',
      '2011',
      '2012',
      '2013',
      '2014',
      '2015',
      '2018',
    ]
  }
  const room = {
  min: [
    '0',
    '1',
    '2',
    '3',
    '4',
    '5',
    '6',
    '7'
  ],
  max: [
    '3',
    '4',
    '5',
    '6',
