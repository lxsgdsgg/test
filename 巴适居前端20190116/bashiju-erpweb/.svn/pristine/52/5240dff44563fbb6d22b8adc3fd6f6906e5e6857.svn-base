<script>
  import PageList from '@/mixins/pageList'
  import * as RequestURL from '@/request/manage/taxAllocationSet'
  export default {
    name: "TaxAllocationSet",
    mixins: [PageList],
    props:{
      data: {
        type: Object,
        required: true,
        default(){
          return null
        }
      }
    },
    data(){
      return {
        isAdd: true,
        dialogWidth: 900,
        tableData: [],
        hackReset: true,
        showAddDialog: false,
        loadingQueryBtn: false,
        loadingDataView: false,
        currentRowData: '',
        queryForm:{
          typeName: ''
        },
        editForm:{
          cityCode: this.data.cityCode,
          name: '',
          isHouse: '0',
          deedTax: 0,
          addedValueTax: 0,
          incomeTax: 0,
          landTtransferTax: 0,
          one2Year: 0,
          one2Year90Area: 0,
          one: 0,
          one90Area: 0,
          two2Year: 0,
          two2Year90Area: 0,
          two: 0,
          two90Area: 0,
          three2Year: 0,
          three2Year90Area: 0,
          three: 0,
          three90Area: 0
        }
      }
    },
    methods:{
      _loadData(btnQuery){
        if(btnQuery){
          this.loadingQueryBtn = true
          this.listQuery.page = 1
          this.listQuery.currentPage = 1
        }
        this.loadingDataView = true
        let params = Object.assign({},{...this.queryForm},{
          page: this.listQuery.page,
          limit: this.listQuery.limit
        })
        params.cityCode = this.data.cityCode
        RequestURL.queryHousePropertyListByCity(params).then(res=>{
          this.tableData = res.data
          this.listQuery.total = res.count
          this.loadingQueryBtn = false
          this.loadingDataView = false
        }).catch(err=>{
          this.loadingQueryBtn = false
          this.loadingDataView = false
          console.log(err)
        })
      },

      changeType(isHouse){
        if(isHouse === '0'){
          this.dialogWidth = 900
        }else{
          this.dialogWidth = 600
        }
        this.setForm()
      },

      handlerEdit(row){
        this.$nextTick(()=>{
          this.currentRowData = ''
          if(row && row.id){
            this.isAdd = false
            this.editForm.isHouse = String(row.isHouse)
            this.currentRowData = row
          }else{
            this.isAdd = true
            this.editForm.isHouse = "0"
          }
          this.setForm()
          this.showAddDialog = true
        })
      },

      checkSaveData(){
        let param = {...this.editForm}
        for(let i in this.editForm){
          if(!param[i] || param[i] === 0 ){
            param[i] = 0
          }
        }
      },

      handlerSubmit(){
        if(!this.editForm.name){
          this.$message({
            type: 'warning',
            message: '配置名称为空!'
          })
          return
        }else{
          this.checkSaveData()
          this.$confirm('确定要提交数据吗？','提示',{
            confirmButtonText: '确定',
            cancelButtonText: '取消',
            type: 'warning'
          }).then(()=>{
            if(this.isAdd){
              this.handlerAdd()
            }else{
              this.handlerUpdate()
            }
          })
        }
      },

      setForm(){
        const isHouse = this.editForm.isHouse
        for(let i in this.editForm){
          this.editForm[i] = this.currentRowData[i]
        }
        this.editForm.cityCode = this.data.cityCode
        this.editForm.isHouse = isHouse
      },

      /**
       * 新增配置
       * @param row
       */
      handlerAdd(){
        let params = {...this.editForm}
        RequestURL.addHouseProperty({jsonData: JSON.stringify(params)}).then(res=>{
          this._msg(res)
          this.showAddDialog = false
        }).catch(err=>{
          console.log(err)
        })
      },

      /**
       * 修改配置
       * @param row
       */
      handlerUpdate(){
        this.editForm.id = this.currentRowData.id
        let params = {...this.editForm}
        RequestURL.updateHouseProperty({jsonData: JSON.stringify(params)}).then(res=>{
          this._msg(res)
          this.showAddDialog = false
        }).catch(err=>{
          console.log(err)
        })
      },

      /**
       * 删除配置
       * @param row
       */
      handlerDelete(row){
        this.$confirm('确定要删除此配置吗?','提示',{
          confirmButtonText: '确定',
          cancelButtonText: '取消',
          type: 'warning'
        }).then(()=>{
          RequestURL.deleteHouseProperty({id: row.id}).then(res=>{
            this._msg(res)
          }).catch(err=>{
            console.log(err)
          })
        })
      },

      _msg(res){
        if(res.success){
          this.$message({
            type: 'success',
            message: res.msg || '操作成功!'
          })
          this._loadData(false)
        }else{
          this.$message({
            type: 'error',
            message: res.msg || '操作失败!'
          })
        }
      }
    },
    mounted(){
      this.setForm()
    }
  }
</script>

