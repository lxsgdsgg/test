  export const CUS_TYPES = {
    SELLING: 4,
    RENT: 5,
  }

  export default {
    name: 'dashboard',
    components: {BarChart, PieChart, countTo, AddHouse},
    data () {
      return {
        CUS_TYPES: CUS_TYPES,
        useTypes: useTypes,
        pieChartData: null,
        barChartData: null,
        activeName1: 'second',
        activeName2: 'first',
        informationList: [
