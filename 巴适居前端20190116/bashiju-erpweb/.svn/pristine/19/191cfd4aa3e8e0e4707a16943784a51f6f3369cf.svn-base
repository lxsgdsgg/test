.action-bar {}

.photo-wrap {
  margin-top: 20px;
  height: 530px;
  overflow-y: auto;
  overflow-x: hidden;

  .photo-item {
    position: relative;
    width: 300px;
    margin-bottom: 20px;

    .img-box {
      position: relative;
      width: 300px;
      height: 200px;
      padding: 10px;

      img {
        cursor: pointer;
        max-width: 280px;
        max-height: 180px;
      }
    }

    .bottom {
      position: relative;
      padding: 14px;
      cursor: pointer;
      transition: all 0.2s;

      &:hover {
        background-color: #c1c6d2;
        color: #ffffff;
        .time {
          color: #ffffff;
        }
      }

      .bottom-content {
        margin-top: 13px;
        line-height: 16px;
      }

      .button {
        float: right;
      }

      .time {
        font-size: 13px;
        color: #999;
      }
    }

    .cover {
      position: absolute;
      left: 0;
      top: 0;
      color: #42b983;
      z-index: 999;
    }
  }
}

.carousel-item {
  position: relative;
  width: 400px;
  height: 300px;

  img {
    cursor: pointer;
    max-width: 400px;
    max-height: 300px;
  }

  .text {
    position: absolute;
    bottom: 0;
    width: 100%;
    text-align: center;
    padding: 20px;
    color: #fff;
    background-color: rgba(0, 0,0,0.5);
    font-size: 16px;
  }
}

.el-carousel__item:nth-child(2n) {
  background-color: #99a9bf;
}

.el-carousel__item:nth-child(2n+1) {
  background-color: #d3dce6;
}
