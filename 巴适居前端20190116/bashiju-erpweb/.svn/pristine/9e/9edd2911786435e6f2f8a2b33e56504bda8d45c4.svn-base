/**
 * 校验手机号码
 */
export function checkMobile (rule, value, callback) {
  if (!value) callback()

  const reg = /^[1][3,4,5,7,8][0-9]{9}$/
  if (!reg.test(value)) {
    callback(new Error('格式不正确'))
  } else {
    callback()
  }

}

/**
 * 校验座机
 * @param rule
 * @param value
 * @param callback
 * @constructor
 */
export function checkFixedPhone (rule, value, callback){
  if (!value) callback()
  const reg =/\d{3}-\d{8}|\d{4}-\d{7}/
  if (!reg.test(value)) {
    callback(new Error('格式不正确'))
  } else {
    callback()
  }
}

/**
 * 校验身份证号码
 */
export function checkCardNo (rule, value, callback) {
  if (!value) callback()

  const reg = /(^\d{15}$)|(^\d{18}$)|(^\d{17}(\d|X|x)$)/
  if (!reg.test(value)) {
    callback(new Error('格式不正确'))
  } else {
    callback()
  }

}
