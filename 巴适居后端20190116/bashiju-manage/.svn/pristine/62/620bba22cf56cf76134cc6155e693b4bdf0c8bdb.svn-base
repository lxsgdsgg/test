		List<Map<String,Object>> attachments = (List)data.get("imgInfos");
		boolean  res1 = commonSqlServie.batchCommonOperationDatabase(attachments, "sys_community_attachment","id" ,false);
		if(res1) {
			res = 1l;
		}else {
			res = 0l;
		}
		return res;
	}
	
