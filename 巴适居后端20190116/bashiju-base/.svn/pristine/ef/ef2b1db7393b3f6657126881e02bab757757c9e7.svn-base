<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:rabbit="http://www.springframework.org/schema/rabbit"
	xsi:schemaLocation="http://www.springframework.org/schema/rabbit
	http://www.springframework.org/schema/rabbit/spring-rabbit.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
		   <!-- exchange queue binging key绑定 -->
    <rabbit:topic-exchange name="ERP-BASE-EXCHANGE" id="ERP-BASE-EXCHANGE" durable="true"  auto-delete="false" internal="false">
    </rabbit:topic-exchange>
    	  <!-- spring template声明-->
    <rabbit:template id="reRabbitTemplate"  exchange="ERP-BASE-EXCHANGE"  connection-factory="connectionFactory"  message-converter="jsonMessageConverter"/>
	
   <!-- queue配置 -->
    <!-- durable:是否持久化 -->
    <!-- exclusive: 仅创建者可以使用的私有队列，断开后自动删除 -->
    <!-- auto_delete: 当所有消费客户端连接断开后，是否自动删除队列 -->
    <rabbit:queue id="ERP-BASE-USERLOG-QUEUE" name="ERP-BASE-USERLOG-QUEUE" durable="true" auto-delete="false" exclusive="false" />
	<rabbit:queue id="ERP-BASE-ERRORLOG-QUEUE" name="ERP-BASE-ERRORLOG-QUEUE" durable="true" auto-delete="false" exclusive="false" />
	<rabbit:queue id="ERP-BASE-SENDSMS-QUEUE" name="ERP-BASE-SENDSMS-QUEUE" durable="true" auto-delete="false" exclusive="false" />
	 

	<!-- 声明消费者 -->
    <bean id="SaveLog" class="com.bashiju.base.service.mq.SaveLog" />
    <bean id="sensms" class="com.bashiju.base.service.mq.SendSMS" />
    <!-- listener配置 消费者 自动确认 -->
    <!-- queues：监听的队列，多个的话用逗号（,）分隔 ref：监听器 -->
     <rabbit:listener-container
        connection-factory="connectionFactory" acknowledge="auto"
        message-converter="jsonMessageConverter">
        <rabbit:listener queues="ERP-BASE-USERLOG-QUEUE" ref="SaveLog" method="saveUserLog"/>
        <rabbit:listener queues="ERP-BASE-ERRORLOG-QUEUE" ref="SaveLog" method="saveErrorLog"/>
        <rabbit:listener queues="ERP-BASE-SENDSMS-QUEUE" ref="sensms" method="execute"/>
    </rabbit:listener-container> 
    
     <!-- 消息对象json转换类 -->
    <bean id="jsonMessageConverter" class="org.springframework.amqp.support.converter.Jackson2JsonMessageConverter" />
    
  </beans>
